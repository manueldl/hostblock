# Maintainer: Manuel Domínguez López <mdomlop at gmail dot com>

_pkgver_year=2017
_pkgver_month=01
_pkgver_day=08

_gitname=hostblock
pkgname=${_gitname}-local
pkgver=41
pkgrel=1
pkgdesc="A adblock system based on /etc/hosts."
url="https://github.com/mdomlop/${_gitname}"
source=("${_gitname}.tar")
arch=('any')
md5sums=('SKIP')
license=('GPL3')
depends=('curl')
provides=(${_gitname})
conflicts=(${_gitname})
changelog=ChangeLog

package() {
    cd "${srcdir}/${_gitname}"
    make install DESTDIR=${pkgdir}
}
