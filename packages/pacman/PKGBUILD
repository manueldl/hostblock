# Maintainer: Manuel Domínguez López <mdomlop at gmail dot com>

_pkgver_year=2017
_pkgver_month=05
_pkgver_day=01

_gitname=hostblock
pkgname=${_gitname}-git
pkgver=41
pkgrel=1
pkgdesc="A adblock system based on /etc/hosts."
arch=('any')
url="https://github.com/manueldl/${_gitname}"
source=("git+https://github.com/manueldl/${_gitname}.git")
license=('GPL3')
depends=('curl')
conflicts=(${_gitname})
changelog=ChangeLog

md5sums=('SKIP')

pkgver() {
  cd ${srcdir}/${_gitname}
  git rev-list --count HEAD
}

package() {
    cd "${srcdir}/${_gitname}"
    make DESTDIR=${pkgdir} install
    systemctl daemon-reload
}
